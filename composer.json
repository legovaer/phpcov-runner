{
    "name": "legovaer/phpcov-runner",
    "description": "A tool which allows you to perform a code coverage analysis on multiple PHP files",
    "type": "project",
    "require": {
        "phpunit/phpcov": "~3.0",
        "symfony/console": "~3.1",
        "phpunit/php-code-coverage": "~3.0"
    },
    "license": "GNU-2+",
    "authors": [
        {
            "name": "Levi Govaerts",
            "email": "legovaer@me.com"
        }
    ],
    "bin": ["bin/phpcovrunner"],
    "config": {
      "bin-dir": "bin/"
    },
    "autoload": {
      "psr-4": {"Legovaer\\PHPCOVRunner\\": "src"}
    },
    "minimum-stability": "dev"
}
